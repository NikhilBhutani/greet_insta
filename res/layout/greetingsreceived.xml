<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgsendgreet"
    android:orientation="vertical"
  >


        <ImageView
            android:id="@+id/greetingImg"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:src="@drawable/greeting_default"
             />
        
        <TextView 
            android:id="@+id/greet_text"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:textSize="15sp"
            android:text="Message:"/>
        
        <LinearLayout android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_gravity="center"
        android:orientation="vertical">
          
        <TextView
            android:id="@+id/addmsg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="15sp"
            />
        </LinearLayout>
        
        <Button 
            android:id="@+id/bsendgreet"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GREET BACK"
            />
      
     
    

</LinearLayout>